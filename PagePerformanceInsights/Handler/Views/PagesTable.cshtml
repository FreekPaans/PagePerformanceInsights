<div class="pages_table_container loading">
		
<table>
<thead>
	<tr>
		<th class="head_page"><span>Page</span></th>
		<th>Count</th>
		<th>Median</th>
		<th>Mean</th>
		<th>Sum</th>
	</tr>
</thead>
<tbody>
<tr class="selected"><td class="total">All Pages</td><td>@ViewModel.Data.StatisticsForAllPages.Count</td><td>@ViewModel.Data.StatisticsForAllPages.Median</td><td>@ViewModel.Data.StatisticsForAllPages.Mean</td><td>@ViewModel.Data.StatisticsForAllPages.Sum</td></tr>
 @foreach(var page in ViewModel.Data.PageStatistics) {
 <tr>
	<td>@page.PageName</td>
	<td>@page.Count</td>
	<td>@page.Median</td>
	<td>@page.Mean</td>
	<td>@page.Sum</td>
 </tr>
 }
</tbody>
</table>
</div>