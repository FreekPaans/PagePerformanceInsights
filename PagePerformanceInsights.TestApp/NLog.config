<?xml version="1.0" encoding="utf-8" ?>
<!-- 
  This file needs to be put in the application directory. Make sure to set 
  'Copy to Output Directory' option in Visual Studio.
  -->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<target xsi:type="Trace" name="trace" layout="${longdate} ${callsite} ${message} ${exception:format=tostring}" />
		<target xsi:type="EventLog" name="evtlog" layout="${longdate} ${callsite} ${message} ${exception:format=tostring}" />
	</targets>


	<rules>
		<logger name="*" minlevel="Trace" writeTo="evtlog,trace" />
	</rules>
</nlog>
